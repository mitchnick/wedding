.row
  %div{class: form_class_width}
    .well
      %h2.text-center
        Editing RSVP for
        = @rsvp.display_name
      = render partial: 'form', locals: {rsvp: @rsvp, guest: @guest, show_custom_message: @show_custom_message}

    - if admin_signed_in?
      .links
        = link_to 'Show', [@rsvp.guest, @rsvp]
        = link_to 'Back', rsvps_path
