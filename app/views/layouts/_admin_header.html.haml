%nav.navbar.navbar-default
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#my-navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"} Future Nicks
    / Collect the nav links, forms, and other content for toggling
    #my-navbar-collapse.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if admin_signed_in?
          %li{role: "presentation"}
            = link_to "Guests", guests_path
          %li{role: "presentation"}
            = link_to "Responses", '#'
          %li{role: "presentation"}
            = link_to "Admin", all_admin_path
          %li{role: "presentation"}
            = link_to "Logout", destroy_admin_session_path, method: "delete"
        - else
          %li{role: "presentation"}
            = link_to "Log In", new_admin_session_path
