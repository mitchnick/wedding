- content_for :top_buttons do
  = link_to "New Admin", new_admin_path, class: top_button_class

%h1 Listing Admins
%table.table.table-striped.datatable
  %thead
    %tr
      %th Email
      %th Actions
  %tbody
    - @admins.each do |admin|
      %tr
        %td= link_to admin.email, admin
        %td
          .links.table-links
            = link_to 'Show', admin
            = link_to 'Edit', edit_admin_path(admin)
            - if current_admin == admin
              = link_to 'Update Password', edit_password_admins_path
            = link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' }