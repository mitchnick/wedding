.button-top-row
  .btn.btn-primary= link_to 'New Admin', new_admin_path

%h1 Listing Admins
%table.table.table-hover
  %thead
    %tr
      %th Email
      %th Actions
  %tbody
    - @admins.each do |admin|
      %tr
        %td= admin.email
        %td
          .links.table-links
            = link_to 'Show', admin
            = link_to 'Edit', edit_admin_path(admin)
            - if current_admin == admin
              = link_to 'Update Password', edit_password_admins_path
            = link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' }